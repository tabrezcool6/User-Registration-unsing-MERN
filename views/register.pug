         include ../static/style.css

block content
    section.section#loginPage
            .column.left#login_page
                ul 
                    li Categories
                    li #[a(href="/") Educational]
                    li #[a(href="/") Time Management]
                    li #[a(href="/") Self-Development]
                    li #[a(href="/") Entreprenuership]
                ul 
                    li Shop and Learn
